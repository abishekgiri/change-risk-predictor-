# Core runtime
RELEASEGATE_PORT=8000
RELEASEGATE_TENANT_ID=demo-tenant
RELEASEGATE_STORAGE_BACKEND=postgres
RELEASEGATE_POSTGRES_DSN=postgresql://releasegate:change-me-in-prod@postgres:5432/releasegate
RELEASEGATE_AUTO_MIGRATE=true

# Auth
RELEASEGATE_JWT_ISSUER=releasegate
RELEASEGATE_JWT_AUDIENCE=releasegate-api
RELEASEGATE_JWT_SECRET=replace-with-long-random-secret

# Signature / checkpoint integrity
RELEASEGATE_CHECKPOINT_SIGNING_KEY=replace-with-long-random-secret
RELEASEGATE_CHECKPOINT_SIGNING_KEY_ID=compose-default

# Enforcement behavior
RELEASEGATE_STRICT_MODE=false
RELEASEGATE_LEDGER_VERIFY_ON_STARTUP=true
RELEASEGATE_LEDGER_FAIL_ON_CORRUPTION=true

# Rate limits
RELEASEGATE_RATE_LIMIT_WINDOW_SECONDS=60
RELEASEGATE_RATE_LIMIT_TENANT_DEFAULT=180
RELEASEGATE_RATE_LIMIT_IP_DEFAULT=300
RELEASEGATE_RATE_LIMIT_TENANT_HEAVY=20
RELEASEGATE_RATE_LIMIT_IP_HEAVY=40
RELEASEGATE_RATE_LIMIT_TENANT_WEBHOOK=300
RELEASEGATE_RATE_LIMIT_IP_WEBHOOK=600

# Logging
RELEASEGATE_LOG_LEVEL=INFO

# Postgres container bootstrap
POSTGRES_DB=releasegate
POSTGRES_USER=releasegate
POSTGRES_PASSWORD=change-me-in-prod
